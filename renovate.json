{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Renovate configuration for the @ahdcreative organization",
    "extends": [
        "github>ahdcreative/renovate-config",
        ":maintainLockFilesWeekly",
        ":rebaseStalePrs",
        ":semanticCommits",
        "docker:enableMajor",
        "docker:pinDigests",
        "group:linters",
        "helpers:pinGitHubActionDigests"
    ],
    "automerge": false,
    "configMigration": true,
    "internalChecksFilter": "strict",
    "ignorePaths": ["**/requirements/**"]
}